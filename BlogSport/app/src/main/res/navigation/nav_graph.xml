<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.idanl.blogsport.Fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_postDetailsFragment"
            app:destination="@+id/postDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.idanl.blogsport.Fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/writersFragment"
        android:name="com.example.idanl.blogsport.Fragments.WritersFragment"
        android:label="fragment_writers"
        tools:layout="@layout/fragment_writers" />
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.idanl.blogsport.Fragments.PostDetailsFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post"
            app:argType="com.example.idanl.blogsport.Models.Post" />
    </fragment>
</navigation>